/**index.wxss**/
swiper {
  width: 100%;
  height: 400rpx;
}

swiper image {
  display: block;
  width: 100%;
  height: 100%;
}

.main_box {
  display: flex;
  height: 100%;
  /* flex-direction: row; */
  /* overflow: hidden; */
}
 
.main_left {
  /* 设置fixed定位，固定左边，不会随着页面滚动而滚动 */
  position: fixed;
  width: 250rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  background:rgba(249,249,249,1);
  border-top: 1rpx solid #efefef;
  border-right: 1rpx solid #efefef;
}
 
.text-style {
  width: 250rpx;
  height: 100rpx;
  font-size: 34rpx;
  text-align: center;
  line-height: 84rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(102,102,102,1);
  display: block;
}
 
.active {
  width: 250rpx;
  height: 100rpx;
  background:rgba(255,255,255,1); 
  font-weight:900;
  color:rgba(51,51,51,1);
}

.active:before{
  width:r5px;
  height:80rpx;
  content: "|";
  font-weight: 900;
  color:#396895;
  float: left;
  font-size: 50rpx;
  margin-left: 0;
  padding-left: 0;
}

.main_right {
  position: absolute;
  width: 480rpx;
  left: 280rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
}
.main_right_tit {
  height: auto;
  display: flex;
  flex-direction: row;
}

.main_right_txt {
  font-family:PingFangSC-Regular;
  font-size: 25rpx;
  padding-top: 30rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  color: rgba(102,102,102,1);
}

.seat {
  width: 50rpx;
  height: 100rpx;
}